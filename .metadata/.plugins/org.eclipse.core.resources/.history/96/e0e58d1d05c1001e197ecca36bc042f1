#include "tetrisScoring.h"

uint16_t getScore(){
	return score;
}

void addScore(uint8_t numberOfLineCompleted)
{
	//ajouter des points si on clique sur fallButton ? == augmenter la difficult√©
	uint8_t levelNumber = 1;	//VERIFIER COMMENT ON LE GERE
	switch(numberOfLineCompleted){
	case 1:
		score += 100*levelNumber;
		break;
	case 2:
		score += 300*levelNumber;
		break;
	case 3:
		score += 500*levelNumber;
		break;
	case 4:
		score += 800*levelNumber;
		break;
	case 0:
		//erreur
		break;
	}
}

